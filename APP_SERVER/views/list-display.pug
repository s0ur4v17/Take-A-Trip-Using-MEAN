extends layout

block content
  #banner.page-header
    .row
      .col-md-6.col-sm-12
        h1= title
          a.btn.btn-primary(href='/new', style="margin-left:1160px;")  Add Movie
  .row
    each movie in movies
      .col-md-4
        .card(style='width: 30rem; margin-left:60px; margin-top:40px;')
          img.card-img-top(src=movie.image height="300px" style='padding-left: 70px;')
          .card-body 
            .text-center 
              h4.card-title= movie.name + " - " + movie.releaseYear
              p.card-text= movie.description
              -for(var i=1; i <= movie.rating; i++)
                span.glyphicon.glyphicon-star(style='color: yellow;')
              -for(var i=movie.rating; i < 5; i++)
                span.glyphicon.glyphicon-star-empty(style='color: yellow;')
              p
              a.btn.btn-default(href='/movies/' + movie._id) Details

